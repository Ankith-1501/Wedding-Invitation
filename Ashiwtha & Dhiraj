    <script>
        function countdown() {
            const weddingDate = new Date("May 9, 2025 10:35:00").getTime();
            const x = setInterval(function() {
                const now = new Date().getTime();
                const distance = weddingDate - now;
                
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                
                document.getElementById("countdown").innerHTML = `üíç ${days}d ${hours}h ${minutes}m ${seconds}s left`;
                
                if (distance < 0) {
                    clearInterval(x);
                    document.getElementById("countdown").innerHTML = "üéâ Wedding Day is Here! üéâ";
                }
            }, 1000);
        }
        countdown();
    </script>
